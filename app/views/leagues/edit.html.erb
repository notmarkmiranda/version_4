<div class="row">
  <div class="col l4 offset-l4 s12">
    <h5>Edit League</h5>
    <%= form_for @league do |f| %>
      <div class="input-field">
        <%= f.text_field :name %>
        <%= f.label :name, "League Name" %>
      </div>
      <div class="input-field">
        <%= f.submit "Submit League Changes", class: "btn btn-poker" %>
      </div>
    <% end %>
  </div>
</div>
