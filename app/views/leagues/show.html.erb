<div class="card">
  <div class="card-content">
    <div class="delete-div tooltipped" data-position="bottom" data-tooltip="are you sure? this will delete everything associated with this league">
      <%= button_to "clear", { controller: :leagues, action: "destroy", id: @league.slug }, method: :delete, form_class: "material-icons delete-icon delete-league-#{@league.slug}" %>
    </div>
    <span class="card-title"><%= @league.name.titleize %></span>
    <div class="<%= @league.slug %>-actions league-actions">
      <%= link_to "edit league name", edit_league_path(@league), class: "action" %>
      <%= link_to "schedule game", new_league_game_path(@league), class: "action" %>

    </div>


      <div class="row">
        <div class="col l4 s12 landing-component">
          <%= render partial: "best_player" %>
        </div>

        <div class="col l4 s12 landing-component">
          <%= render partial: "biggest_game" %>
        </div>
        <div class="col l4 s12 landing-component">

          <div class="current-season center-align">
            <h3 class="column-title">CURRENT SEASON</h3>
            <span class="fa-stack fa-lg fa-xl">
              <i class="fa fa-circle fa-stack-2x"></i>
              <i class="fa fa-calendar fa-stack-1x fa-inverse"></i>
            </span>
            <h4><span class="stat"><%# pluralize(@current_season.game_count, 'game') %>4 games</span></h4>
            <div class="stats">
              <table>
                <thead>
                  <tr>
                    <th>Stat</th>
                    <th>Value</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Players per Game:</td>
                    <td>100</td>
                  </tr>
                  <tr>
                    <td>Average Pot Size:</td>
                    <td>$873</td>
                  </tr>
                  <tr>
                    <td>Total Pot Size:</td>
                    <td>$10,765</td>
                  </tr>
                  <tr>
                    <td>Season Leader:</td>
                    <td>J.Mann</td>
                  </tr>
                </tbody>
              </table>
              <hr>
            </div>
            <div class="link">
              <p><%= link_to "view all of the seasons", "#", class: "action" %></p>
            </div>
          </div>

        </div>
        <%# render partial: "shared/participants_landing_column", locals: { participants: @participants } %>
        <%# render partial: "shared/games_landing_column", locals: { games: @games } %>
        <%# render partial: "shared/seasons_landing_column", locals: { seasons: @seasons } %>
      </div>



    <ul>
      <li><p><strong># of players: </strong> <%= @league.participant_count(current_user) %></p></li>
      <li><p><strong># of games: </strong> <%= @league.game_count %></p></li>
      <li><p><strong># of seasons: </strong> <%= @league.seasons_count %></p></li>
    </ul>
  </div>
</div>
