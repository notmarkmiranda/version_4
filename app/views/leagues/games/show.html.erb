<% present(@game) do |game| %>
  <%= game.formatted_date %>
  <%= game.formatted_money %>
<% end %>
<% @game.players.each do |player| %>
  <% present(player.participant) do |participant| %>
    <%= participant.full_name %> - <%= player.finishing_place %>
    <% if @game.completed %>
    &nbsp;- <%= player.score %>
    <% end %>
  <% end %>
<% end %>
